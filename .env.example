# Elasticsearch Configuration
ES_HOST=localhost
ES_PORT=9200
ES_PROTOCOL=http
ES_USERNAME=elastic
ES_PASSWORD=your_password_here

# Server Configuration
PORT=3002
BACKEND_PORT=3002
FRONTEND_PORT=3420

# Node Environment
NODE_ENV=development

# API Configuration
API_BASE_URL=http://localhost:3002

# CORS Configuration
CORS_ORIGIN=http://localhost:3420

# Logging
LOG_LEVEL=info

# Request Timeout (in milliseconds)
REQUEST_TIMEOUT=30000

# Max Retry Attempts
MAX_RETRIES=3

# SSL/TLS Configuration (if needed)
ES_SSL_ENABLED=false
ES_SSL_REJECT_UNAUTHORIZED=true

# Index Settings
DEFAULT_INDEX_SHARDS=1
DEFAULT_INDEX_REPLICAS=0

# Search Settings
DEFAULT_PAGE_SIZE=10
MAX_PAGE_SIZE=100

# Cache Settings (if implemented)
CACHE_ENABLED=false
CACHE_TTL=3600

# Debug Mode
DEBUG=false